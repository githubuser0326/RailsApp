<p id="notice"><%= notice %></p>

<h1>greeting</h1>
<p>greeting count<%= @greetings.count %> </p>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @greetings.each do |greeting| %>
      <tr>
        <td><%= greeting.name %></td>
        <td><%= greeting.message %></td>
        <td><%= link_to 'show', greeting %></td>
        <td><%= link_to 'edit', edit_greeting_path(greeting) %></td>
        <td><%= link_to 'delete', greeting, method: :delete, data: { confirm: 'can you delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

